<%= form_with do |form| %>
  <div class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
    <%= form.label :name, class: "block text-gray-700 text-sm font-bold mb-2"%>
    <%= form.text_field :name, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline mb-1"%>
    <%= form.label :address, class: "block text-gray-700 text-sm font-bold mb-2"%>
    <%= form.text_field :address, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline mb-1"%>
    <%= form.label :description, class: "block text-gray-700 text-sm font-bold mb-2"%>
    <%= form.text_field :description, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline mb-1"%>
    <%= form.label :price_per_night, class: "block text-gray-700 text-sm font-bold mb-2"%>
    <%= form.number_field :price_per_night, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline mb-1"%>
    <%= form.label :number_of_guests, class: "block text-gray-700 text-sm font-bold mb-2"%>
    <%= form.number_field :number_of_guests, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline mb-1"%>
    <div class="mt-4">
      <%= form.submit "Create", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded"%>
    </div>
  </div>
<% end %>
